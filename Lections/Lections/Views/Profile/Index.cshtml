@model User
<html>

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <title> Profile</title>
</head>

<body style="background-color:black">
    <div style="display:inline-table; color:white; background-color: black">
        <h1 style="color:white">User Profile </h1>
        <form method="post">
            <table class="table table-user-information">
                <tbody>
                    <tr>
                        <td>Firstname</td>
                        <td><input type="text" name="firstname" class="form-control" value="@Model.firstname" autofocus required> </td>
                    </tr>
                    <tr>
                        <td>Lastname</td>
                        <td> <input type="text" name="lastname" class="form-control" value="@Model.lastname" autofocus required></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td> <input type="email" name="email" class="form-control" value="@Model.email" autofocus required></td>
                    </tr>

                    <tr>
                    <tr>
                        <td>Username</td>
                        <td>@Model.username</td>
                    </tr>
                    <tr>
                        <td>Stars</td>
                        <td>@Model.ammountStars</td>
                    </tr>
                    <tr>
                        <td>Lections</td>
                        <td>@Model.ammountLections</td>
                    </tr>
                    <tr>
                        <td>Admin</td>
                        @if (@Model.isAdmin)
                        {
                            <td>Yes</td>
                        }
                        else
                        {
                            <td>No</td>

                        }
                    </tr>
                </tbody>
            </table>
            <input asp-controller="Profile" asp-action="EditUser" type="submit" value="Save Changes" class="btn btn-lg btn-success btn-block">
        </form>

        @if (@Model.isAdmin)
        {
            <input asp-controller="Profile" asp-action="" type="submit" value="Manage Users" class="btn btn-lg btn-success btn-block">
            <input asp-controller="Profile" asp-action="" type="submit" value="Manage Lections" class="btn btn-lg btn-success btn-block">
        }
    </div>
</body>

</html>

