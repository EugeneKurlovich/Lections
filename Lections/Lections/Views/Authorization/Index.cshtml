
@{
    ViewData["Title"] = "Authorization";
}

<html>

<head>

</head>

<body style="background-color:black">
    <div class="container">
        <div class="row" style="margin-top:30px">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Your login" name="email" type="text">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Your password" name="password" type="password" value="">
                                </div>
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Sign In">
                                <input class="btn btn-lg btn-success btn-block" type="submit" asp-controller="Authorization" asp-action="SignUp" value="Sign Up">
                            </fieldset>
                        </form>
                        <hr />
                        <center><h4>OR</h4></center>
                        @foreach (var item in Model)
                         {
                             <a class="btn btn-primary login-button" asp-action="Sign" asp-route-provider="@item"> @item </a>
                         }
                    </div>
                </div>
            </div>
        </div>
    </div>

    </body>
</html>