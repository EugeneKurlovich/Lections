@model  IEnumerable<Lection>
@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    
</head>
<body style="background-color:black">
    <div class="well">
        <table class="table">
            <tr>
            <td>  Name <br /> <a asp-action="nameAsc" asp-controller="Home"> Asc </a> <a asp-action="nameDsc" asp-controller="Home"> Desc </a></td>
            <td>Small description</td>
            <td>Stars  <br /> <a asp-action="starsAsc" asp-controller="Home"> Asc </a> <a asp-action="starsDsc" asp-controller="Home"> Desc </a></td>
            <td>Text</td>
            <td>Create  <br /> <a asp-action="cDateAsc" asp-controller="Home"> Asc </a> <a asp-action="cDateDsc" asp-controller="Home"> Desc </a></td>
            <td>Update  <br /> <a asp-action="uDateAsc" asp-controller="Home"> Asc </a> <a asp-action="uDateDsc" asp-controller="Home"> Desc </a></td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.name </td>
                    <td>@item.smallDescription</td>
                    <td>@item.stars</td>
                  
                    <td><a href="~/Lections/ShowText/?name=@item.name">Show</a></td>
                    <td>@item.dateCreate</td>
                    <td>@item.dateUpdate</td>

                </tr>
            }
        </table>
    </div>
    </body>
</html>
