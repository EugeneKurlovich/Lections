@model IEnumerable<User>
@{
    ViewData["Title"] = "Users";
}
<html>

<head>
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <h2 style="color:white">Users</h2>
</head>

<body style="background-color:black">
    <div class="well">
        <table class="table">
            <tr>
                <td>
                    Username
                    <br /> <a asp-action="uNameAsc" asp-controller="Admin"> Asc </a> <a asp-action="uNameDsc" asp-controller="Admin"> Desc </a>
                </td>
            <td>
                Firstname
                </td>
            <td>
                Lastname
                </td>
            <td>
                Email
                </td>
            <td>
                Password
                </td>
            <td>

                Stars
                <br /> <a asp-action="starAsc" asp-controller="Admin"> Asc </a> <a asp-action="starDsc" asp-controller="Admin"> Desc </a>
            </td>
            <td>
                Lections
                <br /> <a asp-action="lAsc" asp-controller="Admin"> Asc </a> <a asp-action="lDsc" asp-controller="Admin"> Desc </a>
            </td>
            <td>
                Admin
                <br /> <a asp-action="admAsc" asp-controller="Admin"> Asc </a> <a asp-action="admDsc" asp-controller="Admin"> Desc </a>
            </td>
            <td>
                ConfirmedEmail
                <br /> <a asp-action="emailAsc" asp-controller="Admin"> Asc </a> <a asp-action="emailDsc" asp-controller="Admin"> Desc </a>
            </td>
            <td>
                Edit/Delete
                </td>
            <td>
                Admin/!Admin
                </td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.username </td>
                    <td>@item.firstname</td>
                    <td>@item.lastname</td>
                    <td>@item.email</td>
                    <td>@item.password</td>
                    <td>@item.ammountStars</td>
                    <td>@item.ammountLections</td>
                    @if (@item.isAdmin)
                    {
                        <td>Yes</td>
                    }
                    else
                    {
                        <td>No</td>

                    }
                    @if (@item.emailConfirmed)
                    {
                        <td>Yes</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    <td><a href="~/Admin/AdminEdit/?username=@item.username">Edit</a> <a href="~/Admin/AdminDelete/?username=@item.username">Delete</a></td>
                    <td><a href="~/Admin/MakeAdmin/?username=@item.username">Admin</a> <a href="~/Admin/DeleteAdmin/?username=@item.username">!Admin</a></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>

